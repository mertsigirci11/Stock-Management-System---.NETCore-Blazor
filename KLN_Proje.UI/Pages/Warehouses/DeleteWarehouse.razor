@page "/delete-warehouse"
@inject HttpClient Http
@inject NavigationManager UriHelper

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Delete Warehouse By Id</h5>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Warehouse Id</label>
            <div class="col-sm-8">
                <input @bind="@id" for="@id" type="number" class="form-control" id="warehouseId" placeholder="Warehouse Id" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-8">
                <button @onclick=@RemoveWarehouse type="button" class="btn btn-primary">Remove Warehouse</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int id { get; set; }

    private async Task RemoveWarehouse()
    {
        await Http.DeleteAsync($"api/warehouses/{id}");

    }
}
