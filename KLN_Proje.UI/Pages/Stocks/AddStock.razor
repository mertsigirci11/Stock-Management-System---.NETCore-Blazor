@page "/add-stock"
@inject HttpClient Http

<h3>Add some stocks</h3>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add Office Contact</h5>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Name</label>
            <div class="col-sm-8">
                <input @bind="@stock.Name" for="@stock.Name" type="text" class="form-control" id="name" placeholder="Name" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Price</label>
            <div class="col-sm-8">
                <input type="number" for="@stock.Price" class="form-control" id="price" placeholder="Price" @bind="@stock.Price" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Piece</label>
            <div class="col-sm-8">
                <input @bind="@stock.Piece" for="@stock.Piece" type="number" class="form-control" id="piece" placeholder="Piece" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Warehouse Id</label>
            <div class="col-sm-8">
                <input @bind="@stock.WarehouseId" for="@stock.WarehouseId" type="number" class="form-control" id="warehouseId" placeholder="Warehouse Id" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-8">
                <button @onclick=@CreateStock type="button" class="btn btn-primary">Save Stock</button>
            </div>
        </div>
    </div>
</div>

@code {
    private Stock stock = new Stock();

    private async Task CreateStock()
    {
        await Http.PostAsJsonAsync("api/stocks", stock);
    }
}
