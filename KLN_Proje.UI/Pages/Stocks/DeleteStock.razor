@page "/delete-stock"
@inject HttpClient Http

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Delete Stock By Id</h5>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Stock Id</label>
            <div class="col-sm-8">
                <input @bind="@id" for="@id" type="number" class="form-control" id="stockId" placeholder="Stock Id" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-8">
                <button @onclick=@RemoveStock type="button" class="btn btn-primary">Remove Stock</button>
            </div>
        </div>
    </div>
</div>

@code {
    private int id;

    private async Task RemoveStock()
    {
        await Http.DeleteAsync($"api/stocks/{id}");
    }
}