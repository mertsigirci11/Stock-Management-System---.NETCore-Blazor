@page "/delete-office"
@inject HttpClient Http

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Delete Office By Id</h5>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Office Id</label>
            <div class="col-sm-8">
                <input @bind="@id" for="@id" type="number" class="form-control" id="officeId" placeholder="Office Id" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-8">
                <button @onclick=@RemoveOffice type="button" class="btn btn-primary">Remove Office</button>
            </div>
        </div>
    </div>
</div>

@code {
    private int id;

    private async Task RemoveOffice()
    {
        await Http.DeleteAsync($"api/companies/{id}");
    }
}
