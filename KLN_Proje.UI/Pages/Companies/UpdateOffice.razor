@page "/update-office"
@inject HttpClient Http

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add Office Contact</h5>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Office Id</label>
            <div class="col-sm-8">
                <input @bind="@office.Id" for="@office.Id" type="number" class="form-control" id="officeId" placeholder="Office Id" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Name</label>
            <div class="col-sm-8">
                <input @bind="@office.Name" for="@office.Name" type="text" class="form-control" id="name" placeholder="Name" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Address</label>
            <div class="col-sm-8">
                <input type="text" for="@office.Address" class="form-control" id="address" placeholder="Address" @bind="@office.Address" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Company Id</label>
            <div class="col-sm-8">
                <input @bind="@office.CompanyId" for="@office.CompanyId" type="number" class="form-control" id="companyId" placeholder="Company Id" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-8">
                <button @onclick=@PutOffice type="button" class="btn btn-primary">Update Office</button>
            </div>
        </div>
    </div>
</div>

@code {
    private Office office = new Office();

    private async Task PutOffice()
    {
        await Http.PutAsJsonAsync("api/companies", office);
    }
}
