@page "/add-office"
@inject HttpClient Http

<h3>Add some offices</h3>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Add Office Contact</h5>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Name</label>
            <div class="col-sm-8">
                <input @bind="@office.Name" for="@office.Name" type="text" class="form-control" id="name" placeholder="Name" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Address</label>
            <div class="col-sm-8">
                <input type="text" for="@office.Address" class="form-control" id="address" placeholder="Address" @bind="@office.Address" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Company Id</label>
            <div class="col-sm-8">
                <input @bind="@office.CompanyId" for="@office.CompanyId" type="number" class="form-control" id="companyId" placeholder="Company Id" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-8">
                <button @onclick=@CreateOffice type="button" class="btn btn-primary">Save Office</button>
            </div>
        </div>
    </div>
</div>




@code {

    private Office office = new Office();

    private async Task CreateOffice()
    {
        await Http.PostAsJsonAsync("api/companies", office);
    }

}
